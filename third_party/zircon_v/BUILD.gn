import("//build/v_rules.gni")

# HAL subsystem V translations

v_object("zircon_v_hal_mmio") {
  sources = [ "hal/mmio.v" ]
  output_name = "hal_mmio"
}

v_object("zircon_v_hal_sdio") {
  sources = [ "hal/sdio.v" ]
  output_name = "hal_sdio"
}

v_object("zircon_v_hal_clock_reset") {
  sources = [ "hal/clock_reset.v" ]
  output_name = "hal_clock_reset"
}

v_object("zircon_v_hal_firmware") {
  sources = [ "hal/firmware.v" ]
  output_name = "hal_firmware"
}

group("zircon_v_hal") {
  deps = [
    ":zircon_v_hal_mmio",
    ":zircon_v_hal_sdio",
    ":zircon_v_hal_clock_reset",
    ":zircon_v_hal_firmware",
  ]
}
