// Soliloquy Ethernet Driver Component Manifest
// Allwinner EMAC (Ethernet MAC) driver
{
    include: [
        "driver_component/driver.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "driver",
        binary: "driver/soliloquy-ethernet.so",
        bind: "meta/bind/soliloquy-ethernet.bindbc",
        colocate: "true",
    },
    capabilities: [
        { service: "fuchsia.hardware.network.Service" },
    ],
    use: [
        { service: "fuchsia.hardware.platform.bus.Service" },
        { service: "fuchsia.hardware.gpio.Service" },
    ],
    expose: [
        {
            service: "fuchsia.hardware.network.Service",
            from: "self",
        },
    ],
}
